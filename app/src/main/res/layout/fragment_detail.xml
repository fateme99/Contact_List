<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.detail.DetailFragment">
    <TextView
        android:textColor="@color/black"
        android:padding="8dp"
        android:textSize="18sp"
        android:text="@string/contact_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:padding="8dp"
        android:textSize="18sp"
        android:id="@+id/contact_id_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:padding="8dp"
        android:textSize="18sp"
        android:text="@string/contact_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:padding="8dp"
        android:textSize="18sp"
        android:id="@+id/contact_display_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:padding="8dp"
        android:textSize="18sp"
        android:text="@string/contact_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:padding="8dp"
        android:textSize="18sp"
        android:id="@+id/contact_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/ok_btn"
        android:text="@string/ok"
        android:textColor="@color/black"
        android:backgroundTint="@color/light_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>