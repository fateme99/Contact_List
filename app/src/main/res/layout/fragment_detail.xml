<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="contact"
            type="com.example.contact_list.model.Contact" />

        <variable
            name="contactDetail"
            type="com.example.contact_list.view.detail.DetailFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".view.detail.DetailFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/contact_id"
            android:textColor="@color/mellow_green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contact_id_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:text="@{contact.id}"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/contact_display_name"
            android:textColor="@color/mellow_green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contact_display_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:text="@{contact.nameDisplay}"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/contact_phone_number"
            android:textColor="@color/mellow_green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contact_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:text="@{contact.phoneNO}"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_green"
            android:onClick="@{ ()-> contactDetail.dismiss()}"
            android:text="@string/ok"
            android:textColor="@color/black" />

    </LinearLayout>
</layout>